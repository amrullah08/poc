@model SilverProcessingApp.Repository.Models.AspNetRoleClaims

@{
    ViewData["Title"] = "Create";
}
<body style="background-image: url('https://images.unsplash.com/photo-1514454529242-9e4677563e7b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxleHBsb3JlLWZlZWR8MjB8fHxlbnwwfHx8fA%3D%3D&auto=format&fit=crop&w=600&q=60'); background-color: #cccccc; height: 500px; background-position: center; background-repeat: no-repeat; background-size: cover; ">
    <div class="container-fluid px-1 py-5 mx-auto" style="">
        <div class="row d-flex justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
                <h1>AspNet Role Claims</h1>
                <hr />
                <div class="row d-flex justify-content-center">
                    <div class="col-md-6">
