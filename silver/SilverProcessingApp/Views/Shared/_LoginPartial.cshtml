@using SilverProcessingApp.Areas.Identity.Data

@inject SignInManager<SilverProcessingAppUser> SignInManager
@inject UserManager<SilverProcessingAppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="dropdown">
            <button type="button" class="nav-link dropdown-toggle" data-toggle="dropdown">
