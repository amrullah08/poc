@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 style="padding:20px 150px 20px 150px">@ViewData["Title"]</h1>
<body style="background-image: url('https://media.istockphoto.com/photos/stack-of-hands-unity-and-teamwork-concept-picture-id1174511028?b=1&k=20&m=1174511028&s=170667a&w=0&h=E95ckFnRAct0MUvyHYnhE0Ke42ZP5gywX10lP7NzymM='); background-color: #cccccc; height: 500px; background-position: center; background-repeat: no-repeat; background-size: cover; ">
    <div class="row" style="padding:20px 150px 20px 150px">
        <div class="col-md-12">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-8">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-8">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-8">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                    <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>

    </div>
    </body>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
